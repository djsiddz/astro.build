---
import { Sprite } from "astro-icon"
import MainLayout from "~/layouts/MainLayout.astro"
import Hero from "./_components/landing-page/Hero.astro"
import Intro from "./_components/landing-page/Intro.astro"
import Studio from "./_components/landing-page/Studio.astro"
import Islands from "./_components/landing-page/Islands.astro"
import Sponsors from "./_components/landing-page/Sponsors.astro"
import FinalCTA from "./_components/landing-page/FinalCTA.astro"
import Features from "./_components/landing-page/Features.astro"
import Ecosystem from "./_components/landing-page/Ecosystem.astro"
import NotificationBanner from "~/components/NotificationBanner.astro"
import Flexibility from "./_components/landing-page/Integrations.astro"
---

<Sprite.Provider>
  <MainLayout
    image={{ src: "/og/astro.jpg", alt: "Astro - Build the web you want." }}
  >
    <NotificationBanner uid='astro-together-2024'>
      Join us and 100+ Astro developers at
      <a
        style='whitespace-nowrap'
        href='https://lu.ma/astro-together-meetup-2024'>Astro Together</a
      >
      in Montreal on <time datetime='2024-05-28'>May 28th</time>!
    </NotificationBanner>
    <Hero />
    <Intro />
    <Islands />
    <Flexibility />
	  <Features />
    <Studio />
    <Ecosystem />
    <FinalCTA />
    <Sponsors />
  </MainLayout>
</Sprite.Provider>
